<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @micropost.title %>
</p>

<p>
  <strong>Slug:</strong>
  <%= @micropost.slug %>
</p>

<p>
  <strong>Content:</strong>
  <%= @micropost.content %>
</p>

<p>
  <strong>Images</strong>
  <% @micropost.images.each do |image| %>
   <%= image_tag(image.variant(resize_to_limit: [100, 100])) %>
  <%end %>
</p>

<p>
  <strong>User:</strong>
  <%= @micropost.user_id %>
</p>

<%= link_to 'Edit', edit_micropost_path(@micropost) %> |
